{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users</h1>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Email</th>
            <th scope="col">Update</th>
            <th scope="col">Remove</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <th scope="row">{{ user.id }}</th>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td><a href="{{ path('user_update', { 'id': user.id }) }}">Update</a></td>
                <td><a href="{{ path('user_remove', { 'id': user.id }) }}">Remove</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('user_create') }}">Create new user</a>
{% endblock %}